<!DOCTYPE html>
<html>
  <head>
    <title>Seedbase</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <div class="grid-layout">
      <header>
        <a href="/">Seedbase</a>
        <nav>
          <%= link_to "Events", events_path %>

          <% if current_user %>
            <%= content_tag "div", class: "profile flyout", style: "background-image: url('#{profile_picture_url}?s=120')" do %>
              <div class="flyout-body">
                <a href="#">Your events</a>
                <!-- <%= link_to "Your events", "the manage all your events patth" %> -->
                <%= link_to "Settings", edit_user_path(current_user) %>
                <%= link_to "Sign out", destroy_sessions_path if current_user %>
              </div>
            <% end %>
          <% else %>
            <%= link_to "Register", new_user_path %>

            <%= link_to "Sign in", new_session_path %>
          <% end %>
        </nav>
      </header>
      <%= yield %>
      <footer></footer>
    </div>

    <%= javascript_include_tag 'application' %>
  </body>
</html>
