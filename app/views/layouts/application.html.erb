<!DOCTYPE html>
<html>
  <head>
    <title>Seedbase</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="grid-layout">
      <header>
        <a href="/">Seedbase</a>
        <nav>
          <%= link_to "Events", events_path %>

          <% if current_user %>
            <%= link_to "", edit_user_path(current_user), class: "profile", style: "background-image: url('#{profile_picture_url}?s=120')" %>
          <% else %>
            <%= link_to "Register", new_user_path %>

            <%= link_to "Sign in", new_session_path %>
          <% end %>
        </nav>
      </header>
      <%= yield %>
      <footer></footer>
    </div>
  </body>
</html>
