<div class="container">
  <div class="surface content">
    <div class="notice"><%= flash[:notice] %></div>
    <h2>Teams in <%= @event.name %> <%= @scheduled_event.name %></h2>
    
    <table>
      <tr>
        <th>Name</th>
        <th>Team</th>
        <th>Actions</th>
      </tr>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.members.count %> competitors</td>
        <td>
          <%= form_with url: manage_scheduled_event_team_path(@event, @scheduled_event, team), method: :delete, local: true do |f| %>
            <%= f.button "Remove from jam" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>